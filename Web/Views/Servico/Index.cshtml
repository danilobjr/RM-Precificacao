@model RM.Precificacao.Web.ViewModel.ServicoIndexViewModel

@{
    ViewBag.Title = "Index";
}

@section scriptsOnHead {
    <script src="@Url.Content("~/Scripts/App/Views/ServicoIndex/ViewModel/ServicoIndexViewModel.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/App/Views/ServicoIndex/Script/ServicoIndexScript.js")" type="text/javascript"></script>
}

<h2>Mapa de Ofertas de Serviços</h2>

<section>
    <header>
        <h1>Filtros</h1>
    </header>

    @using (Html.BeginForm())
    { 
        <div>
            <span>Empresa</span>

            <div class="campo">
                <input type="radio" name="empresa" value="1" />
                <label>RM TELECON</label>
            </div>

            <div class="campo">
                <input type="radio" name="empresa" value="2" />
                <label>RM ENERGIA</label>
            </div>
        </div>

        <div>
            <span>Tipo</span>

            <div class="campo">
                <input type="radio" name="empresa" value="1" />
                <label>Engenharia</label>
            </div>

            <div class="campo">
                <input type="radio" name="empresa" value="2" />
                <label>O&M</label>
            </div>
        </div>

        <div>
            <label>Segmento</label>
            <select>
            </select>
        </div>

        <div>
            <label>Serviço</label>
            <select>
            </select>
        </div>

        <div>
            <button>Consultar</button>
        </div>
    }

</section>

